<session>
    <description>A basic stateless session bean with bean-managed 
    transaction demarcation.
    </description>
    
    <ejb-name>CMT StatelessBean</ejb-name>
    
    <home>org.openejb.test.stateless.ContainerTxStatelessHome</home>
    <remote>org.openejb.test.stateless.ContainerTxStatelessObject</remote>
    <ejb-class>org.openejb.test.stateless.ContainerTxStatelessBean</ejb-class>
    
    <session-type>Stateless</session-type>
    <transaction-type>Container</transaction-type>
    
    <security-role-ref>
        <role-name>BigWig</role-name>
        <role-link>Teller</role-link>
    </security-role-ref>
    <security-role-ref>
        <role-name>HighRoller</role-name>
        <role-link>Manager</role-link>
    </security-role-ref>
    
    <resource-ref>
        <res-ref-name>database</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</session>


<project name="OpenEJB-Webadmin" default="jar" basedir="../">
  <!-- $Id$ -->
  <!-- 
  		Contributions by:
  			Daniel S. Haischt <sirabyss@gmx.net>
  	-->

  <property name="build.httpbean-api.src" value="${build.src}/httpbean-api"/>
  <property name="build.httpbean-api.dest" value="${build.dest}/httpbean-api"/>
  <property name="src.httpbean-api.dir" value="${src.dir}/facilities"/>
  <property name="dest.httpbean-api.javadoc.dir" value="${dest.javadoc.dir}/httpbean-api"/>
  
  <!-- Build classpath -->
  <path id="project.classpath">
    <pathelement location="${ejb11.jar}"/>
    <pathelement location="${ejb20.jar}"/>
    <pathelement location="${jms.jar}"/>
    <pathelement location="${jndi.jar}"/>
  </path>
  
  
  <!-- ================================================================== -->
  <!-- Prepares the build directory                                       -->
  <!-- ================================================================== -->

  <target name="prepare">
    <echo message="preparing httpbean-api"/>
    <mkdir dir="${build.httpbean-api.src}"/>
    <mkdir dir="${build.httpbean-api.dest}"/>
    <mkdir dir="${dest.httpbean-api.javadoc.dir}"/>
    <mkdir dir="${build.httpbean-api.dest}/META-INF"/>
    <mkdir dir="beans"/>
    
    <copy todir="${build.httpbean-api.src}">
    
      <fileset dir="${src.httpbean-api.dir}" >
        <include name="**/admin/web/Http**"/>
        <exclude name="**/CVS/**"/>
        <exclude name="**/javax/**"/>
        <exclude name="**/*.class"/>
      </fileset>
    
    </copy>
    
     <copy todir="${build.httpbean-api.dest}">
    
      <fileset dir="${src.java.dir}/etc" >
        <include name="**/LICENSE"/>
        <include name="**/MANIFEST.MF"/>
      </fileset>


    </copy>
    <replace file="${build.httpbean-api.dest}/MANIFEST.MF" token="$$VERSION$$" value="${version}"/>
  </target>

  <!-- ================================================================== -->
  <!-- Compiles the source directory                                      -->
  <!-- ================================================================== -->
  
  <target name="compile"
          depends="prepare"
          description="--> compiles the java source files">
          
    <echo message="compiling httpbean-api"/>
    <javac srcdir="${build.httpbean-api.src}"
           destdir="${build.httpbean-api.dest}"
           debug="${debug}"
           deprecation="${deprecation}">
           
    </javac>
          
  </target>
  
  <!-- ================================================================== -->
  <!-- Compiles the source directory and creates a .jar file              -->
  <!-- ================================================================== -->
  
  <target name="jar"
          depends="compile"
          description="--> generates all java archives (default)">
    
    <echo message="jarring httpbean-api"/>      
    <jar jarfile="dist/${project}_httpbean-api-${version}.jar"
         basedir="build/classes/httpbean-api"
         includes="org/openejb/admin/web/HttpBean.class,
                   org/openejb/admin/web/HttpHome.class,
                   org/openejb/admin/web/HttpObject.class,
                   org/openejb/admin/web/HttpRequest.class,
                   org/openejb/admin/web/HttpResponse.class,
                   org/openejb/admin/web/HttpSession.class"
         manifest="${build.httpbean-api.dest}/MANIFEST.MF"/>
    
  </target>
  
  <!-- ================================================================== -->
  <!-- Creates the API documentation                                      -->
  <!-- ================================================================== -->
  
  <target name="javadocs"
          depends="compile"
          description="--> generates the API documentation">
          
    <javadoc packagenames="org.openejb.*"
             sourcepath="${build.httpbean-api.src}"
             destdir="${dest.httpbean-api.javadoc.dir}"
             doctitle="${name} httpbean-api JavaDoc"
             windowtitle="${name} JavaDoc"
             bottom="${copyright}"
		     package="true"
             author="true"
             version="true"
             noindex="true">
             
      <classpath>
        <path refid="project.classpath"/>
        <pathelement location="${build.dest}/openejb"/>
      </classpath>
             
    </javadoc>
          
  </target>
  
</project>

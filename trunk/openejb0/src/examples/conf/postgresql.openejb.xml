<?xml version="1.0"?>

<openejb xmlns="http://www.openejb.org/System/Configuration">
  <Container id="Default CMP Container" ctype="CMP_ENTITY">
    Global_TX_Database  src/examples/conf/postgresql.titan_global_database.xml
    Local_TX_Database   src/examples/conf/postgresql.titan_local_database.xml
  </Container>
  <Container id="Default Stateless Container" ctype="STATELESS"/>
  <Container id="Default BMP Container" ctype="BMP_ENTITY"/>
  <Deployments dir="beans"/>
  <Connector id="Default JDBC Database">
    JdbcDriver org.postgresql.Driver
    JdbcUrl jdbc:postgresql://localhost/mydb
    UserName username
    Password password
  </Connector>
  <SecurityService id="Default Security Service"/>
  <TransactionService id="Default Transaction Manager"/>
</openejb>